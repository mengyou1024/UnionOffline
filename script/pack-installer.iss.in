#define MyAppName "@PROJECT_NAME@"
#define MyAppNameZhCN "@PROJECT_NAME_ZH_CN@"
#define MyAppVersion "@APP_VERSION@"
#define MyAppPublisher "@APP_PUBLISHER@"
#define MyAppURL "@APP_URL@"
#define MyAppExeName "@PROJECT_NAME@@CMAKE_EXECUTABLE_SUFFIX@"
#define MoroseInstallDir "@MOROSE_INSTALL_DIR@"
#define MoroseIcon  "@MOROSE_ICON@"
#define MoroseInstallerName "@PROJECT_NAME@-Setup-@APP_VERSION@"

#define MDAT_AppAssocName "T8/390N图像"
#define MDAT_AppAssocExt ".mdat"
#define MDAT_AppAssocKey StringChange(MDAT_AppAssocName, " ", "")

#define DAS_AppAssocName "N、R系列单幅图像"
#define DAS_AppAssocExt ".das"
#define DAS_AppAssocKey StringChange(DAS_AppAssocName, " ", "")

#define DAT_AppAssocName "N、R系列连续图像"
#define DAT_AppAssocExt ".dat"
#define DAT_AppAssocKey StringChange(DAT_AppAssocName, " ", "")

#define TOF_AppAssocName "TOFD图像"
#define TOF_AppAssocExt ".tof"
